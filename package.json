{
  "name": "airdrop",
  "version": "1.7.0",
  "description": "跨平台局域网文件传输工具",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "tsc -p tsconfig.main.json && set NODE_ENV=development&& electron .",
    "dev:full": "concurrently \"vite\" \"wait-on http://localhost:5173 && npm run dev\"",
    "dev:web": "vite --config vite.config.web.ts",
    "build": "vite build && tsc -p tsconfig.main.json && vite build --config vite.config.web.ts && node -e \"require('fs').cpSync('dist/web/index.html', 'dist/main/templates/mobile-web.html')\"",
    "start": "npm run build && set NODE_ENV=production&& electron .",
    "dist": "electron-builder",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@types/busboy": "^1.5.4",
    "bonjour-service": "^1.2.1",
    "busboy": "^1.6.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "form-data": "^4.0.5",
    "idb": "^8.0.3",
    "node-forge": "^1.3.3",
    "peerjs": "^1.5.5",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.13.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "streamsaver": "^2.0.6",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "fake-indexeddb": "^5.0.2",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.32",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-singlefile": "^2.3.0",
    "wait-on": "^9.0.3"
  },
  "author": "Airdrop",
  "build": {
    "appId": "com.airdrop.app",
    "productName": "Airdrop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "public/icon.ico",
        "to": "icon.ico"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
